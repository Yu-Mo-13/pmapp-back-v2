<?xml version="1.0"?>
<ruleset name="Laravel">
    <description>The Laravel coding standard</description>

    <!-- What to scan -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>

    <!-- How to scan -->
    <arg value="p"/><!-- Show progress -->
    <arg value="s"/><!-- Show sniff codes in all reports -->
    <arg name="colors"/>
    <arg name="parallel" value="75"/><!-- Enables parallel processing when available for faster results -->

    <!-- Rules -->
    <rule ref="PSR12"/>

    <!-- Exclude specific files -->
    <exclude-pattern>*/migrations/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>*.blade.php</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>

    <!-- Custom rules for Laravel -->
    <rule ref="PSR12.Files.FileHeader">
        <exclude name="PSR12.Files.FileHeader.SpacingAfterBlock"/>
    </rule>

    <!-- Allow longer lines for certain cases -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="200"/>
        </properties>
    </rule>
</ruleset>
